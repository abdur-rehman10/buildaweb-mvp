{
  email {$ACME_EMAIL:admin@example.com}
}

http://{$DOMAIN} {
  redir https://{$DOMAIN}{uri} 308
}

https://{$DOMAIN} {
  encode zstd gzip

  # API under /api/* (keep /api prefix intact)
  handle /api/* {
    reverse_proxy api:4000
  }

  # Web app (React build)
  handle {
    reverse_proxy web:80
  }
}
